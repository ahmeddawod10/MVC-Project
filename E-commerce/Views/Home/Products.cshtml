@model List<Product>


<section id="services" class="services section" style="margin-top:100px">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>The Products of the Category</h2>
        <p>Necessitatibus eius consequatur ex aliquid fuga eum quidem sint consectetur velit</p>
    </div><!-- End Section Title -->

    <div class="container">

        <div class="row gy-4">

            @foreach (var item in Model)
            {

                <div class="col-xl-4 col-lg-6" data-aos="fade-up" data-aos-delay="100" style="margin :20px;"  >
                    <div class="service-item d-flex" style="margin :20px; ">
                        @* <div><i class="bi @item.photo"></i></div> *@
                        <div>
                            <h4 class="title"><a href="~/home/ProductDetails/@item.id" class="stretched-link">@item.name</a></h4>
                            <img src="~/assets/img/@item.photo" alt="@item.name" width="400px" height="400px" />
                            @* <h4><a href="~/home/ProductDetails/@item.id">@item.name</a></h4> *@
                            <p class="description">@item.description</p>
                        </div>
                    </div>
                </div>
            }

            <!-- End Service Item -->


        </div>

    </div>

</section>